{
  "name": "Sebastian-badge.info",
  "description": "Hosting embed Jenkins plugin badges",
  "website": "http://sebastian-badge.info/",
  "repository": "https://github.com/sue445/sebastian-badge",
  "keywords": ["ruby", "padrino", "Jenkins"],
  "scripts": {
    "postdeploy": "bundle exec rake ar:create ar:migrate sebastian:update_center"
  },
  "env": {
    "BUILDPACK_URL": "https://github.com/groonga/heroku-buildpack-rroonga",
    "BUNDLE_WITHOUT": {
      "description": "bundle install --without <these>",
      "value": "test:development"
    }
  },
  "addons": [
    "newrelic:stark",
    "rollbar",
    "memcachier:dev",
    "scheduler",
    "pgbackups:auto-month",
    "papertrail"
  ]
}
